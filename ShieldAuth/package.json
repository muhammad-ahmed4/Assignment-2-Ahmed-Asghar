{
  "name": "auth-app",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "vite build",
    "dev": "vite dev",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "db:push": "drizzle-kit push",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio --port=4985",
    "seed": "tsx scripts/seed.ts",
    "promote-admin": "tsx scripts/promote-admin.ts",
    "db:up": "docker-compose up -d",
    "db:down": "docker-compose down",
    "db:restart": "docker-compose restart",
    "db:logs": "docker-compose logs -f postgres",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:clean": "docker-compose down -v",
    "docker:full": "docker-compose -f docker-compose.full.yml up -d",
    "docker:full:down": "docker-compose -f docker-compose.full.yml down",
    "docker:backup": "docker-compose exec postgres pg_dump -U postgres -d Authapp > backup/backup_$(date +%Y%m%d_%H%M%S).sql",
    "docker:restore": "docker-compose exec -T postgres psql -U postgres -d Authapp < backup/backup.sql"
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "^3.3.1",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^6.0.0",
    "@types/bcrypt": "^6.0.0",
    "@types/pg": "^8.15.5",
    "autoprefixer": "^10.4.16",
    "drizzle-kit": "^0.31.4",
    "postcss": "^8.4.32",
    "svelte": "^5.0.0",
    "svelte-check": "^3.6.2",
    "tailwindcss": "^3.4.0",
    "tsx": "^4.20.5",
    "typescript": "^5.2.2",
    "vite": "^6.3.0"
  },
  "dependencies": {
    "@auth/core": "^0.40.0",
    "@auth/drizzle-adapter": "^1.10.0",
    "@auth/sveltekit": "^1.10.0",
    "@sendgrid/mail": "^8.1.5",
    "bcryptjs": "^3.0.2",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.40.0",
    "nanoid": "^5.0.0",
    "postgres": "^3.4.5"
  },
  "type": "module"
}
